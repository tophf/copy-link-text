{
  "manifest_version": 3,
  "minimum_chrome_version": "102",
  "name": "Copy link text",
  "version": "1.1.0",
  "author": "tophf",
  "action": {},
  "description": "Adds a context menu to copy the clicked link's text",
  "permissions": [
    "activeTab",
    "clipboardWrite",
    "contextMenus",
    "offscreen",
    "scripting"
  ],
  "optional_host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "bg.js"
  }
}
